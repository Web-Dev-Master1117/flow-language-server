{
  "name": "flow-language-server",
  "version": "0.1.8",
  "main": "lib/index.js",
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "yarn run clean && babel -s --copy-files --ignore node_modules,spec ./src -d ./lib",
    "ci": "yarn flow && yarn lint && yarn test",
    "clean": "rimraf lib/",
    "dev": "yarn watch",
    "flow": "flow",
    "format": "prettier src/**/*.js --write --single-quote --no-bracket-spacing --trailing-comma=all --jsx-bracket-same-line",
    "lint": "eslint src/",
    "prepare": "yarn build",
    "test": "jest",
    "watch": "yarn build -- --watch"
  },
  "bin": {
    "flow-language-server": "./lib/bin/cli.js"
  },
  "devDependencies": {
    "atom-ide-ui": "0.1.9",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-plugin-idx": "^2.0.0",
    "babel-plugin-transform-async-to-module-method": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-1": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-fbjs-opensource": "^1.0.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-rulesdir": "^0.1.0",
    "flow-bin": "^0.50.0",
    "fs-extra": "^3.0.1",
    "jest": "^20.0.4",
    "prettier": "^1.5.3",
    "vscode-languageserver-types": "^3.3.0"
  },
  "dependencies": {
    "adm-zip": "0.4.7",
    "async-to-generator": "1.1.0",
    "event-kit": "2.2.0",
    "fuzzaldrin-plus": "0.4.1",
    "idx": "^1.5.0",
    "ini": "1.3.4",
    "log4js": "1.1.1",
    "lru-cache": "4.0.2",
    "mkdirp": "0.5.1",
    "node-fetch": "1.6.3",
    "nuclide-commons": "0.1.9",
    "nullthrows": "1.0.0",
    "read-pkg-up": "^2.0.0",
    "rimraf": "2.5.4",
    "rxjs": "5.3.1",
    "semver": "5.3.0",
    "shell-quote": "^1.6.0",
    "simple-text-buffer": "9.2.11",
    "temp": "0.8.3",
    "through": "2.3.8",
    "vscode-languageserver": "^3.3.0",
    "vscode-uri": "^1.0.1",
    "yargs": "^8.0.2"
  },
  "engines": {
    "node": ">=6"
  },
  "jest": {
    "testMatch": [
      "**/*-spec.js",
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "lib/*"
    ]
  },
  "files": [
    "dirs.js",
    "lib/"
  ]
}
